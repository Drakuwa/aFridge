<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fbimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:src="@drawable/facebook_connect" />

        <TextView
            android:id="@+id/connecttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:text="Connect to your Facebook account:"
            android:textColor="#101010"
            android:textSize="16dip" />

        <Button
            android:id="@+id/connectbtn"
            android:background="@drawable/black_button_gradient"
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="5dip"
            android:text="Connect" />

        <TextView
            android:id="@+id/gototxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:text="Go to the Facebook Application:"
            android:textColor="#101010"
            android:textSize="16dip" />

        <Button
            android:background="@drawable/black_button_gradient"
            style="@style/ButtonText"
            android:id="@+id/gotobtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="5dip"
            android:text="Go to App" />

        <TextView
            android:id="@+id/getnotestxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:text="Fetch new notes:"
            android:textColor="#101010"
            android:textSize="16dip" />

        <Button
            android:background="@drawable/black_button_gradient"
            style="@style/ButtonText"
            android:id="@+id/getnotesbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="5dip"
            android:text="Get Notes" />

        <TextView
            android:id="@+id/sharetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:text="Write something on your Wall:"
            android:textColor="#101010"
            android:textSize="16dip" />

        <Button
            android:background="@drawable/black_button_gradient"
            style="@style/ButtonText"
            android:id="@+id/sharebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="5dip"
            android:text="Share on Wall" />

        <TextView
            android:id="@+id/logouttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="15dip"
            android:text="Logout of your Facebook account:"
            android:textColor="#101010"
            android:textSize="16dip" />

        <Button
            android:background="@drawable/black_button_gradient"
            style="@style/ButtonText"
            android:id="@+id/logoutbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginTop="5dip"
            android:text="Logout" />
    </LinearLayout>

</ScrollView>