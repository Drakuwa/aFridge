<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <View
        android:id="@+id/splitter"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#FF909090" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splitter"
        android:layout_margin="5dip"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/splitter"
        android:layout_margin="5dip"
        android:layout_toRightOf="@id/image"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/image"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/splitter2"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:layout_below="@id/image"
        android:background="#FF909090" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splitter2"
        android:layout_margin="10dip"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name"
        android:layout_margin="10dip"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/text_quant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_type"
        android:layout_margin="10dip"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/text_qtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_type"
        android:layout_margin="10dip"
        android:layout_toRightOf="@id/text_quant"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/text_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_quant"
        android:layout_margin="10dip"
        android:textColor="#FFF" />

    <TextView
        android:id="@+id/text_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_details"
        android:layout_margin="10dip"
        android:textColor="#FFF" />

    <View
        android:id="@+id/splitter3"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:layout_below="@id/text_exp"
        android:background="#FF909090" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/splitter3"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/change"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/black_button_gradient"
            android:text="Change" />

        <Button
            android:id="@+id/delete"
            style="@style/ButtonText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/red_button_gradient"
            android:text="Delete" />
    </LinearLayout>

</RelativeLayout>